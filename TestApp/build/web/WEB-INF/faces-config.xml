<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
         <navigation-case>
            <from-outcome>EmpLogin</from-outcome>
            <to-view-id>EmployeeLogin.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>CreateNewAcct</from-outcome>
            <to-view-id>NewUserPg.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>Login</from-outcome>
            <to-view-id>UserHomepage.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/EmployeeLogin.xhtml</from-view-id>
         <navigation-case>
            <from-outcome>UserLogin</from-outcome>
            <to-view-id>index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>Login</from-outcome>
            <to-view-id>EmployeeHomePage.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>adminLogin</from-outcome>
            <to-view-id>AdminHomePage.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/EmployeeHomePage.xhtml</from-view-id>
         <navigation-case>
            <from-outcome>checkout</from-outcome>
            <to-view-id>customerCheckout.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>addCharge</from-outcome>
            <to-view-id>createAdditionalCharge.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>viewAvailableRooms</from-outcome>
            <to-view-id>viewAvailableRooms.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>createItem</from-outcome>
            <to-view-id>Items.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/customerCheckout.xhtml</from-view-id>
         <navigation-case>
            <from-outcome>invoice</from-outcome>
            <to-view-id>Invoice.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/UserHomepage.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>checkRsvr</from-outcome>
            <to-view-id>currentReservation.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>createRsvr</from-outcome>
            <to-view-id>createReservation.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>newCharge</from-outcome>
            <to-view-id>additionalChargeMenu.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/AdminHomePage.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>createEmpl</from-outcome>
            <to-view-id>createEmployee.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>changeUsrPwd</from-outcome>
            <to-view-id>changeUserPassword.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>alterRoomPrice</from-outcome>
            <to-view-id>alterRoomPrice.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>createItem</from-outcome>
            <to-view-id>Items.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/createReservation.xhtml</from-view-id>
         <navigation-case>
            <from-outcome>selectRes</from-outcome>
            <to-view-id>selectReservation.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/selectReservation.xhtml</from-view-id>
         <navigation-case>
            <from-outcome>confirmReservation</from-outcome>
            <to-view-id>confirmReservation.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>    
    
    <navigation-rule>
        <from-view-id>/confirmReservation.xhtml</from-view-id>
         <navigation-case>
            <from-outcome>confirm</from-outcome>
            <to-view-id>UserHomepage.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>    
</faces-config>
